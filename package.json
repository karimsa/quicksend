{
	"type": "module",
	"name": "@karimsa/quicksend",
	"version": "0.1.0",
	"main": "dist/cli.js",
	"bin": {
		"quicksend": "dist/cli.js"
	},
	"license": "MIT",
	"packageManager": "yarn@4.9.2",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "nodemon -e ts -w src --exec 'yarn build'",
		"build": "esbuild src/cli.ts --outfile=dist/cli.js --bundle --platform=node --target=node20 --format=esm --packages=external",
		"postbuild": "chmod +x dist/cli.js",
		"format": "prettier --write .",
		"lint": "oxlint && prettier --check .",
		"test:types": "tsc --noEmit",
		"test": "yarn lint && yarn test:types"
	},
	"devDependencies": {
		"@types/minimist": "^1",
		"@types/node": "24.0.13",
		"@types/prompts": "2.4.9",
		"@types/yargs": "17.0.33",
		"esbuild": "0.25.6",
		"nodemon": "3.1.10",
		"oxlint": "1.6.0",
		"prettier": "3.6.2",
		"typescript": "5.8.3"
	},
	"dependencies": {
		"commander": "14.0.0",
		"minimist": "1.2.8",
		"prompts": "2.4.2",
		"twilio": "5.7.3",
		"yargs": "18.0.0",
		"zod": "4.0.5",
		"zx": "8.7.0"
	}
}
